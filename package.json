{
  "name": "imageus",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",

    "compile:sass-dev": "node-sass ./email-template/sass/main.scss ./email-template/css/style.css",
    "watch:sass": "nodemon -e scss -x \"npm run compile:sass-dev\"",
    "devserver": "live-server --open=./email-template",
    "start:email-template": "npm-run-all --parallel devserver watch:sass",

    "compile:sass": "node-sass ./email-template/sass/main.scss ./email-template/dist/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' ./email-template/dist/css/style.comp.css -o ./email-template/dist/css/style.prefix.css",
    "compress:css": "node-sass ./email-template/dist/css/style.prefix.css ./email-template/dist/css/style.css --output-style compressed",
    "cp:template": "cp ./email-template/index.html ./email-template/dist/index.html",
    "build:template": "npm-run-all compile:sass prefix:css compress:css cp:template",

    "inline:css": "juice --css ./email-template/dist/css/style.prefix.css --preserve-important true --remove-style-tags false  ./email-template/index.html ./email-template/dist/inline/index.html",
    "juice": "juice"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.2.14",
    "@angular/cdk": "^7.3.7",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/material": "^7.3.7",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "core-js": "^2.5.4",
    "hammerjs": "^2.0.8",
    "imagesloaded": "^4.1.4",
    "masonry-layout": "^4.2.2",
    "packery": "^2.1.2",
    "rxjs": "~6.3.3",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.8",
    "@angular/cli": "~7.3.8",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "autoprefixer": "^9.5.1",
    "codelyzer": "~4.5.0",
    "concat": "^1.0.3",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "juice": "^5.2.0",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2"
  }
}
